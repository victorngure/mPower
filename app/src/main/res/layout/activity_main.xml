<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.linda.mpower.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="184dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/close"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Light Bulb is off"
            android:textSize="24sp" />

        <Button
            android:id="@+id/open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:gravity="left"
            android:onClick="onBT"
            android:text="Switch On" />

        <Button
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="16dp"
            android:onClick="offBT"
            android:text="Switch Off"
            android:layout_alignTop="@+id/open"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp" />

        <Button
            android:id="@+id/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="16dp"
            android:onClick="connectBT"
            android:text="Connect to Bluetooth"
            android:layout_alignBaseline="@+id/close"
            android:layout_alignBottom="@+id/close"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#111111"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#add8e6"
        android:weightSum="1"
        android:layout_weight="0.5"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            >

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:maxLines="10"
                android:text="Sensor Data"
                android:textSize="20sp"
                android:width="350dp"
                android:textColor="#111111"
                android:layout_below="@+id/imageView1"
                android:layout_alignEnd="@+id/close" />

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/sensor_values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:maxLines="10"
                android:text=""
                android:textSize="20sp"
                android:width="350dp"
                android:layout_alignTop="@+id/label"
                android:layout_alignStart="@+id/label" />


        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#111111"></View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            >

            <TextView
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:maxLines="10"
                android:text="Timer"
                android:textColor="#111111"
                android:textSize="20sp"
                android:width="350dp"
                android:layout_below="@+id/imageView1"
                android:layout_alignEnd="@+id/close" />

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:maxLines="10"
                android:text=""
                android:textSize="20sp"
                android:width="350dp"
                android:layout_alignTop="@+id/label"
                android:layout_alignStart="@+id/label" />

        </LinearLayout>

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#d5dbdb"
            android:weightSum="1"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                >

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:maxLines="10"
                    android:text="Total Energy used"
                    android:textColor="#111111"
                    android:textSize="20sp"
                    android:width="350dp"
                    android:layout_below="@+id/imageView1"
                    android:layout_alignEnd="@+id/close" />

                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/energy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:maxLines="10"
                    android:text=""
                    android:textSize="20sp"
                    android:width="350dp"
                    android:layout_alignTop="@+id/label"
                    android:layout_alignStart="@+id/label" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#111111"
                ></View>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/close"
                    android:layout_below="@+id/imageView1"
                    android:layout_marginTop="18dp"
                    android:width="350dp"
                    android:gravity="center_horizontal"
                    android:maxLines="10"
                    android:text="Power Limit"
                    android:textColor="#111111"
                    android:textSize="20sp" />

                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:maxLines="10"
                    android:text=""
                    android:textSize="20sp"
                    android:width="350dp"
                    android:layout_alignTop="@+id/label"
                    android:layout_alignStart="@+id/label" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
